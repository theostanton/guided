{
  "name": "guided",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "watch": "yarn wsrun --stages --fast-exit watch",
    "test": "JEST_JUNIT_OUTPUT_DIR=reports/junit/ yarn workspaces run test --passWithNoTests --ci --runInBand --reporters=default --reporters=jest-junit",
    "develop:frontend": "STAGE=staging yarn workspace @guided/website run develop",
    "develop:backend": "nodemon",
    "start": "yarn workspace @guided/graphql run develop",
    "build": "./build.sh",
    "install:all": "yarn install",
    "clean": "find -E . -regex \".*(srv|node_modules|.cache|public|.serverless|tsconfig.tsbuildinfo|yarn.lock|reports|junit.xml)\" -exec rm -rf {} \\;",
    "build:logger": "yarn workspace @guided/logger run build",
    "del": "find -E . -regex \".*/*(.d.ts|.d.ts.map|.js.map|.jsx.map)\" -exec rm -rf {} \\;",
    "build:envs": "yarn workspace @guided/envs run build",
    "build:database": "yarn workspace @guided/database run build",
    "build:utils": "yarn workspace @guided/utils run build",
    "build:events": "yarn workspace @guided/events run build",
    "build:google": "yarn workspace @guided/google run build",
    "build:geojson": "yarn workspace @guided/geojson run build",
    "build:compute-rides": "yarn workspace @guided/compute-rides run build",
    "build:graphql": "yarn workspace @guided/graphql run build",
    "build:website": "yarn workspace @guided/website run build",
    "build:codegen": "yarn workspace @guided/codegen run build"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.2",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "@types/jest": "^25.1.2",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5",
    "@types/node": "^13.7.0",
    "wsrun": "^5.2.0"
  },
  "workspaces": {
    "packages": [
      "backend/*",
      "events/*",
      "apis/*",
      "tools/*",
      "frontend/*"
    ],
    "nohoist": [
      "**"
    ]
  }
}
