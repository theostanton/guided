{
  "name": "guided",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "watch": "STAGE=local yarn wsrun watch",
    "build": "yarn workspaces run build",
    "clean": "find -E . -regex \".*(srv|node_modules|.cache|public|.serverless)\" -exec rm -rf {} \\;",
    "del": "find -E . -regex \".*\\/src\\/*(.d.ts|.js.map)\" -exec rm -rf {} \\;",
    "develop:frontend": "STAGE=local yarn workspace @guided/website run develop",
    "develop:graphql": "STAGE=local yarn workspace @guided/graphql run develop",
    "build:types": "STAGE=local yarn workspace @guided/types run build",
    "deploy:frontend:staging": "yarn workspace @guided/website run deploy:staging",
    "deploy:backend:staging": "yarn workspace @guided/graphql run deploy:staging"
  },
  "dependencies": {
    "typescript": "^3.7.5",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "wsrun": "^5.2.0"
  },
  "workspaces": {
    "packages": [
      "backend/*",
      "events/*",
      "tools/*",
      "website"
    ]
  }
}
