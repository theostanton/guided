{
  "restartable": "rs",
  "delay": 500,
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "backend/graphql/src",
    "apis/google/srv",
    "backend/spinup/srv",
    "backend/codegen/srv",
    "events/compute-rides/srv",
    "events/index/srv",
    "tools/database/srv",
    "tools/envs/srv",
    "tools/geojson/srv",
    "tools/logger/srv",
    "tools/utils/srv"
  ],
  "env": {
    "NODE_ENV": "development",
    "STAGE": "development"
  },
  "ext": "js,json,jsx,d.ts"
}