{
  "restartable": "rs",
  "delay": 500,
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "elements/graphql/srv",
    "elements/compute-stage/srv",
    "apis/google/srv",
    "apis/mapbox/srv",
    "events/compute-stage/srv",
    "events/index/srv",
    "tools/database/srv",
    "tools/geojson/srv",
    "tools/spinup/srv",
    "tools/logger/srv",
    "tools/utils/srv"
  ],
  "ext": "js,json,jsx,d.ts"
}