{
  "name": "@guided/graphql",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "tsc",
    "start": "STAGE=staging node -r ts-node/register ./src/server.ts",
    "deploy": "sls deploy"
  },
  "dependencies": {
    "@guided/tools": "*",
    "express": "^4.17.1",
    "postgraphile": "^4.6.0",
    "dotenv": "^8.2.0",
    "serverless-content-encoding": "^1.1.0",
    "serverless-dotenv-plugin": "^2.3.1",
    "aws-serverless-express": "^3.3.6",
    "@graphile-contrib/pg-simplify-inflector": "^5.0.0-beta.1"
  },
  "devDependencies": {
    "serverless": "^1.63.0",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/node": "^13.7.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2"
  },
  "workspaces": {
    "nohoist": [
      "**"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "DOT_ENV_FILE=.env.local yarn start",
    "ext": "ts"
  }
}