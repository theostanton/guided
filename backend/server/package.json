{
  "name": "@guided/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "tsc",
    "start": "node -r ts-node/register ./src/server.ts",
    "develop":"nodemon"
  },
  "dependencies": {
    "express": "^4.17.1",
    "postgraphile": "^4.5.5",
    "dotenv": "^8.2.0",
    "@graphile-contrib/pg-simplify-inflector": "^5.0.0-beta.1"
  },
  "devDependencies": {
    "@types/node": "^13.7.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "DOT_ENV_FILE=.env.local yarn start",
    "ext": "ts"
  }
}
